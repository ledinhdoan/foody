<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1><%= @category.name %></h1>
    </br>
      <div class="size">
        <table class="table table-striped table-bordered table-list " >
          <thead>
            <tr>
              <th><%= t "category.id"%></th>
              <th><%= t "category.name" %></th>
              <th><%= t "category.create" %></th>
              <th><%= t "category.update" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="hidden-xs"><%= @category.id %></td>
              <td class="hidden-xs"><%= @category.name %></td>
              <td class="hidden-xs"><%= l @category.created_at,
                format: :short %></td>
              <td class="hidden-xs"><%= l @category.updated_at,
                format: :long %></td>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><%= t "category.list" %></div>
    <% @products.each do |product| %>
      <div class="panel-body">
        <%= link_to product.name, admin_product_path(product) %></div>
    <% end %>
  </div>
</div>
