<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1><%= @product.name %></h1>
    </br>
      <div class="size">
        <table class="table table-striped table-bordered table-list " >
          <thead>
            <tr>
              <th><%= t "product.id"%></th>
              <th><%= t "product.name" %></th>
              <th><%= t "product.description" %></th>
              <th><%= t "product.price" %></th>
              <th><%= t "product.discount" %></th>
              <th><%= t "product.rate" %></th>
              <th><%= t "product.image" %></th>
              <th><%= t "product.create" %></th>
              <th><%= t "product.update" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="hidden-xs"><%= @product.id %></td>
              <td class="hidden-xs"><%= @product.name %></td>
              <td class="hidden-xs"><%= @product.description %></td>
              <td class="hidden-xs"><%= @product.price %></td>
              <td class="hidden-xs"><%= @product.discount %></td>
              <td class="hidden-xs"><%= @product.rate %></td>
              <td><%= image_tag @product.image.url if @product.image? %></td>
              <td class="hidden-xs">
                <%= l @product.created_at, format: :short %></td>
              <td class="hidden-xs">
                <%= l @product.updated_at, format: :long %></td>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
